<Window x:Class="VisualNovelTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualNovelTracker"
        mc:Ignorable="d"
        Title="Visual Novel Tracker" Height="720" Width="1280">
    <Grid Background="#FF1D1D1D">
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Height="21" Margin="6,17,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="158" FontFamily="Times New Roman" FontSize="16"/>
        <DataGrid x:Name="VNGrid" Margin="170,12,12.333,13.667"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="8,0,0,17.667" FontFamily="Times New Roman" FontSize="19" Click="ExitButton_Click" BorderBrush="White" Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="156"/>

    </Grid>
</Window>
